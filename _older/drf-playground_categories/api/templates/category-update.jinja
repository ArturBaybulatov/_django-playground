{% extends '_layout.jinja' %}
{% load staticfiles bootstrap3 %}

{% block content %}
  <form action='{% url 'category-list' %}{{category.pk}}/update/' method='post' class='form'>
    {% csrf_token %}
    
    {% bootstrap_form form %}
    
    {% buttons %}
      <button type='submit' class='btn btn-primary'>Save</button>
    {% endbuttons %}
  </form>
{% endblock %}
